
<div class="parallax parallax-home" id="reg-card">
  <div class="reg-card">
    <form method="POST" id="reg-form" class="column reg-form" action="/userprofile/{{userid}}" >
            <div class="reg-logo">
                <a href="#">Add your details to create your profile </a>
            </div>
      
        <h2>Interested In</h2>
      
        <label for="masters_mba">Degree: </label>
        <select required name="masters_mba" id="degree">
                    <option value="">Degree</option>
                    <option value="Masters">Masters</option>
                    <option value="MBA">MBA</option>
                </select>
              <script>
            document.getElementById("degree").value = {{masters_mba}};
             </script>    
      
     
         <label for="program">Program: </label>
             <select required name="program" value="{{program}}">
                    <option value="">Program</option>
                    <option value="computer science">Computer Science</option>
                    <option value="information systems">Information Systems</option>
                    <option value="financial engineering">Financial Engineering</option>
                    <option value="mechanical engineering">Mechanical Engineering</option>
                    <option value="business intelligent & analytics">Business intelligent & Analytics</option>
                    <option value="construction management">Construction Management</option>
                </select>

                    <label for="term">Term: </label>
                        <select id="term" name="term" required>
                             <option value="">Term</option>
                             <option value="Fall">Fall</option>
                             <option value="Spring">Spring</option>
                        </select>
                        <script>
                           document.getElementById("term").value = {{term}};
                        </script>   
       
         <label for="year">Year: </label>
            <select required name="year" id="year">
                    <option value="">Year</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
            </select>
              <script>
            document.getElementById("year").value = {{year}};
             </script> 
 

        <h2>Undergrad details </h2>  
         <label for="college">Undergad University: </label>
                 <input class="card-input" required id="college" name='college' type="text" value="{{college}}"><br/><br/>
          <label for="undergradProgram">Undergrad Program: </label>
                 <input class="card-input" required id="undergradProgram" name='undergradProgram' type="text" value="{{undergradProgram}}"><br/><br/>
                                                       
          <h2> Exams </h2> 
          <label for="verbal">GRE-Verbal: </label>
                 <input class="card-input"  id="verbal" name='verbal' type="number" min="130" max="170" value="{{verbal}}"><br/><br/>
            <label for="quant">GRE -Quant: </label>
                 <input class="card-input" id="quant" name='quant' type="number"  min="130" max="170" value="{{quant}}"><br/><br/> 
            <label for="awa">GRE-AWA: </label>
                 <input class="card-input" id="awa" name='awa' type="float" min="0" max="6" value="{{awa}}"><br/><br/>

             <label for="gmatScore">GMAT Score: </label>
                 <input class="card-input" id="gmatScore" name='gmatScore' type="number" min="200" max="800" value="{{gmatScore}}"><br/><br/>  
             
             <label for="toeflScore"> TOEFL Score: </label>
                 <input class="card-input" id="toeflScore" name='toeflScore' type="number" min="79" max="120" value="{{toeflScore}}"><br/><br/>    
         
          <div class="row align-right reg-btn-group">
                <button type="submit" value="Create"  class="card-btn card-button" >create</button>
            </div>
                          
  
    </form>
  </div> 
  {{#if hasErrors}}
        {{#each errors}}
           {{this}}
    {{/each}}
  {{/if}}
</div>   

